<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mink.springtest.ajax.repository.BookingRepository">
    <select id="selectBookingList" resultType="com.mink.springtest.ajax.domain.Booking">
        SELECT
            `id`
            ,`name`
            ,`headcount`
            ,`day`
            ,`date`
            ,`phone_number`
            ,`state`
            , `created_at`
            , `updated_at`
        FROM
            `booking`
    </select>
    <delete id="deleteBooking" parameterType="int">
        DELETE FROM
            `booking`
        WHERE
            `id`= #{id}
    </delete>
    <insert id="insertBooking" parameterType="com.mink.springtest.ajax.domain.Booking">
        INSERT INTO
            `booking`
            (
            `name`
            ,`date`
            ,`day`
            ,`headcount`
            ,`phone_number`
            )
        VALUES
            (
             #{name}
            ,#{date}
            ,#{day}
            ,#{headCount}
            ,#{phoneNumber}
            )
    </insert>
</mapper>